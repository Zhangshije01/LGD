<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:background="@color/colorPrimaryDark"
                    android:paddingBottom="20dp">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_turn_back"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/tv_write_num"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="0 字"
                        android:textSize="@dimen/text_size_bigger"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:id="@+id/tv_write_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:text="发布"
                        android:textSize="@dimen/text_size_bigger"/>
                </LinearLayout>

                <com.lgd.lgdthesis.view.ClearEditText
                    android:id="@+id/edit_write_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="请输入标题"
                    android:textColor="@color/colot_textview_dark"
                    android:textSize="@dimen/text_size_biggist"
                    android:maxLength="20"
                    android:maxLines="3"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_view_gray"/>

                <com.lgd.lgdthesis.view.ClearEditText
                    android:id="@+id/edit_write_body"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="正文"
                    android:textColor="@color/colot_textview_dark"
                    android:gravity="top"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_view_gray"/>
                <TextView
                    android:id="@+id/tv_write_location"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:hint="位置信息"
                    android:textSize="@dimen/text_size_bigger"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colot_textview_dark"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_view_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="bottom">
                    <ImageView
                        android:id="@+id/iv_write_photo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/icon_write_photo"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:id="@+id/iv_write_size"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/icon_write_size"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/iv_write_left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/icon_write_left"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:id="@+id/iv_write_right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/icon_write_right"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:id="@+id/iv_write_map"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/icon_write_location"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:id="@+id/iv_write_setting"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/icon_user_setting"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/popu_write_zhezhao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/view_zhezhao"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>
</layout>
