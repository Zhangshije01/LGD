<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"

            android:background="@color/colorPrimaryDark"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_turn_back"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="设置"
                android:textSize="@dimen/text_size_bigger"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
        <com.lgd.lgdthesis.view.TextViewPlus
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="应用信息"
            android:textSize="@dimen/text_size_big"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            app:customFont="@string/font_bold"
            android:background="@color/color_view_gray"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_view_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <com.lgd.lgdthesis.view.TextViewPlus
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="清除缓存"
                android:textSize="@dimen/text_size_bigger"
                android:layout_marginLeft="10dp"
                app:customFont="@string/font_regular"
                android:layout_gravity="center_vertical"/>
            <com.lgd.lgdthesis.view.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="当前缓存是0B"
                android:layout_marginRight="10dp"
                app:customFont="@string/font_regular"
                android:textSize="@dimen/text_size_biggist"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_view_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <com.lgd.lgdthesis.view.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="版本更新"
                android:textSize="@dimen/text_size_bigger"
                android:layout_marginLeft="10dp"
                app:customFont="@string/font_regular"
                android:layout_marginTop="5dp"/>
            <com.lgd.lgdthesis.view.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="v1.0.1"
                android:textSize="@dimen/text_size_big"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                app:customFont="@string/font_regular"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_view_gray"/>
        <com.lgd.lgdthesis.view.TextViewPlus
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="关于我们"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            app:customFont="@string/font_regular"
            android:textSize="@dimen/text_size_bigger"
            />

        <com.lgd.lgdthesis.view.TextViewPlus
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出当前账号"
            android:textSize="@dimen/text_size_biggist"
            android:layout_gravity="center"
            android:background="@drawable/shape_regist_button"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            />
    </LinearLayout>

</layout>
