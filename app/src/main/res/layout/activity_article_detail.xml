<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="20dp">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/icon_turn_back" />
            <TextView
                android:id="@+id/friend_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="羊羊羊，洋洋"
                android:textSize="@dimen/text_size_bigger" />



        </LinearLayout>

        <com.lgd.lgdthesis.view.TextViewPlus
            android:id="@+id/tv_article_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="题目"
            android:textSize="@dimen/text_size_biggist"
            app:customFont="@string/font_bold" />

        <com.lgd.lgdthesis.view.TextViewPlus
            android:id="@+id/tv_article_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="时间"
            app:customFont="@string/font_regular"
            android:textSize="@dimen/text_size_big"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <com.lgd.lgdthesis.view.TextViewPlus
            android:id="@+id/tv_article_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            app:customFont="@string/font_regular"
            android:text="detail sdfds "
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_view_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/write_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:drawableLeft="@mipmap/detail_pinglun"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="    我来说两句               "
                android:textSize="13sp" />
            <ImageView
                android:id="@+id/iv_article_comment"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/comment_white"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/iv_article_collect"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_viewpager_collection_no_white"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/iv_deatil_share"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_share_2"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>

</layout>
